<div class="main-content">
    <div class="bg-light-gray">
        <div class="container">
            <div class="article-tab row d-flex">
                <div class="col-xl-5 align-self-center text-uppercase text-gray d-none d-xl-block"><span>Read</span> Mode</div> 
                <div class="col-xl-4 align-self-end">
                    <ul class="nav  mt-1 mt-md-2 nav-pills nav-fill border-bottom-0 active" id="countries-tab" role="tablist">
                        <li class="nav-item active">
                            <a href="#countries-africa" class="nav-link bg-transparent text-dark-gray py-2 active" data-toggle="tab" data-target="#countries-africa" role="tab" aria-selected="true">Read</a>
                        </li>
                        <li class="nav-item">
                            <a href="#countries-asia" class="nav-link bg-transparent text-dark-gray py-2" data-toggle="tab" data-target="#countries-asia" role="tab" aria-selected="false">Edit</a>
                        </li>
                        <li class="nav-item">
                            <a href="#countries-europe" class="nav-link bg-transparent text-dark-gray py-2" data-toggle="tab" data-target="#countries-europe" role="tab" aria-selected="false">Discussion</a>
                        </li>
                        <li class="nav-item">
                            <a href="#countries-americas" class="nav-link bg-transparent text-dark-gray py-2" data-toggle="tab" data-target="#countries-americas" role="tab" aria-selected="false">History</a>
                        </li>
                    </ul>
                </div> 
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 order-2 order-md-1">
                <div class="tab-content pt-3 pr-0 pr-lg-4">
                    <div class="tab-pane bg-white show active" id="countries-africa" role="tabpanel">
                        <div class="tab-pane bg-white" id="countries-africa" role="tabpanel">
                            <h2>Budima Dance</h2>
                            {{{html-body-content}}}
                        </div>
                    </div>
                    <div class="tab-pane bg-white" id="countries-asia" role="tabpanel">
                        <div class="tab-pane bg-white" id="countries-asia" role="tabpanel">
                            EDIT
                        </div>
                    </div>
                    <div class="tab-pane bg-white" id="countries-europe" role="tabpanel">
                        <div class="tab-pane show active bg-white" id="countries-europe" role="tabpanel">
                            DISCUSSION
                        </div>
                    </div>
                    <div class="tab-pane bg-white" id="countries-americas" role="tabpanel">
                        <div class="tab-pane bg-white" id="countries-americas" role="tabpanel">
                            HISTORY
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 order-1 order-md-2">
                <div class="bg-lighter-gray mx-n1 mx-md-0">
                    <figure class="figure">
                        <img src="{{img}}" class="figure-img img-fluid mb-0" alt="">
                        <figcaption class="figure-caption text-left bg-light-gray px-1 px-md-3 py-1">A group of people performing Budima Dance.</figcaption>
                    </figure>
                    <div class="px-1 p-md-3">
                        <div><span class="text-gray">Nation:</span> {{#countries}}<li><a href="{{.}}">{{.}}</a></li>{{/countries}} </div>
                        <div><span class="text-gray">Region:</span> {{#regions}}<li><a href="{{.}}">{{.}}</a></li>{{/regions}}</div>
                    </div>
                    <hr>
                    <div class="px-1 p-md-3">
                        <div class="text-gray text-uppercase pb-1">Categories</div>
                        <div class="categories categories--list">
                            {{#subjects}}
                                <a href="categories.html" class="category-card bg-{{subject_name_lower}} category-card--small mb-1 h4  category-card--minimal-mobile d-flex align-items-center justify-content-end justify-content-lg-center">
                                    <span class="font-heading text-white justify-content-center pl-md-5 ml-md-4  pl-1 mb-0 category-text">{{subject_name}}</span>
                                </a>
                            {{/subjects}}
                        </div>
                    </div>
                    <hr>
                    <div class="px-1 p-md-3">
                        <div class="text-gray text-uppercase pb-1">Sustainable development goals</div>
                        {{#sdg}}<a class="a-link with-prefix" href="/{{.}}">{{.}}</a>{{/sdg}}
                    </div>
                    <hr>
                    <div class="px-1 p-md-3">
                        <div class="text-gray text-uppercase pb-1">Tags</div>
                        {{#tags}}<a href="#" class="btn btn-outline-secondary text-uppercase px-3 text-primary">{{.}}</a>{{/tags}}
                    </div>
                    <hr class="mb-lg-5 pb-lg-5">
                
                </div>                    </div>                
        </div>
    </div>
</div>

